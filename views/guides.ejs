<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Guides</title>
  <link rel="stylesheet" href="/guides.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-logo">RST Police Database</div>
        <div class="nav-links">
          <a href="/">Login</a>
      </nav>

  <ul>
    <% guides.forEach((guide) => { %>
      <li>
        <a href="/guides/<%= guide._id %>"><%= guide.title %></a>
        <% if (!guide.isPublic && !isAuthenticated) { %>
          <span>(Private - Login to view)</span>
        <% } %>
      </li>
    <% }) %>
  </ul>

  <% if (!isAuthenticated) { %>
    <p>You must be logged in to view private guides.</p>
  <% } %>
</body>
</html>
